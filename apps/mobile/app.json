{
    "expo": {
        "name": "@business-card/mobile",
        "slug": "business-card-mobile-app",
        "version": "0.0.0",
        "orientation": "portrait",
        "icon": "./src/assets/images/platform-icons/icon.png",
        "scheme": "pon",
        "userInterfaceStyle": "automatic",
        "splash": {
            "image": "./src/assets/images/splash/splash-temp.png",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "plugins": [
            [
                "expo-image-picker",
                {
                    "photosPermission": "The app accesses your photos to let you share them with your friends."
                }
            ]
        ],
        "updates": {
            "fallbackToCacheTimeout": 0
        },
        "assetBundlePatterns": ["**/*"],
        "ios": {
            "supportsTablet": true,
            "infoPlist": {
                "NSCameraUsageDescription": "This app uses the camera to scan barcodes on event tickets."
            },
            "bundleIdentifier": "com.anonymous.businesscardmobileapp"
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./src/assets/images/platform-icons/adaptive-icon.png",
                "backgroundColor": "#ffffff"
            },
            "package": "com.anonymous.businesscardmobileapp"
        },
        "web": {
            "favicon": "./src/assets/images/platform-icons/favicon.png"
        }
    }
}
